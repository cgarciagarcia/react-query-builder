{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "types": ["react", "jest"],
    "outDir": "./dist",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "*.config.cjs",
    "jest.config.ts",
    "commitlint.config.js"
  ]
}
